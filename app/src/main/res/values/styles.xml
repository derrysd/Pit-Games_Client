<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/ripple_color</item>
        <item name="textColor">@color/teks_color</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="ButtonTheme" parent="AppTheme">
        <item name="textColor">@android:color/white</item>
        <item name="background">@color/button_color</item>
        <item name="textAppearance">?android:textAppearanceMedium</item>
    </style>

    <style name="SpinnerTheme" parent="AppTheme">
        <item name="background">@drawable/spinner_bg</item>
    </style>

    <style name="EditTextTheme" parent="AppTheme">
        <item name="background">@color/text_background</item>
        <item name="layout_margin">10dp</item>
        <item name="height">30dp</item>
        <item name="textAppearance">?android:textAppearanceMedium</item>
        <item name="textColorHint">@color/teks_color</item>
        <item name="paddingLeft">10dp</item>
    </style>
</resources>