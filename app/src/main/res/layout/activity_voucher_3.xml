<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background2"
    tools:context="xanctuary.transgames_client.Voucher_3">

    <!--stepbar-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/text_background"
        android:padding="20dp"
        android:id="@+id/Voucher3_relativelay">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/Voucher3_linearlay">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/striketrough_text"
                android:text="LANGKAH 1"
                android:textAppearance="?android:textAppearanceSmall"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/striketrough_text"
                android:text="LANGKAH 2"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginLeft="20dp"
                />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:src="@drawable/arrow"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LANGKAH 3"
                android:textAppearance="?android:textAppearanceSmall"
                android:layout_marginLeft="20dp"
                />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Voucher3_stepbar"
            android:layout_below="@id/Voucher3_linearlay"
            android:layout_marginTop="10dp"
            android:src="@drawable/stepbar3"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="VALIDASI PEMBAYARAN ANDA"
            android:textAppearance="?android:textAppearanceMedium"
            android:layout_below="@+id/Voucher3_stepbar"
            android:layout_marginTop="10dp"
            />
    </RelativeLayout>

</RelativeLayout>
